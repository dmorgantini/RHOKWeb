#main_container
  include ../newHeader
  #main_content.body
    h2 Charity Login

    - if (error == 'true')
      span Email address or password is invalid please try again

    form(action="/charity/login", method="post")
      .editor-label
        label(for="username") Email
      .editor-field
        input#username(type="text", name="username")
      .editor-label
        label(for="password") Password
      .editor-field
        input#password(type="password", name="password")
      .form-controls
        input#submit(type="submit", value="Login")
        a#forgotPassword(href='/forgotPassword') Forgot Password?
