include ../newHeader
#content.body
  form(id="paypalForm", action="https://www.paypal.com/cgi-bin/webscr",method="post")
    input(type="hidden",name="cmd",value="_donations")
    input(type="hidden",name="business", value="andrea@charityclick.net")
    input(type="hidden",name="item_name", value="Donation to #{charity.name}")
    input(type="hidden",name="item_number", value="#{charity._id}")
    input(type="hidden",name="amount", value="#{ donation.value }")
    input(type="hidden",name="currency_code",value="GBP")
  span Your donation is being processed, please wait to be redirected to paypal.
script(type="text/javascript")
  $(document).ready(function(){
    $('#paypalForm').submit();
    });
